{
  "name": "@cuet-hackathon/api",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "engines": {
    "node": ">=24.10.0"
  },
  "scripts": {
    "dev": "cross-env DOWNLOAD_DELAY_MIN_MS=5000 DOWNLOAD_DELAY_MAX_MS=15000 node --env-file=../../.env --experimental-transform-types --watch src/index.ts",
    "dev:worker": "cross-env DOWNLOAD_DELAY_MIN_MS=5000 DOWNLOAD_DELAY_MAX_MS=15000 node --env-file=../../.env --experimental-transform-types --watch src/worker.ts",
    "start": "cross-env DOWNLOAD_DELAY_MIN_MS=10000 DOWNLOAD_DELAY_MAX_MS=120000 node --env-file=../../.env --experimental-transform-types src/index.ts",
    "start:worker": "cross-env DOWNLOAD_DELAY_MIN_MS=10000 DOWNLOAD_DELAY_MAX_MS=120000 node --env-file=../../.env --experimental-transform-types src/worker.ts",
    "build": "tsc --noEmit",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "node --experimental-transform-types scripts/run-e2e.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@hono/node-server": "^1.19.6",
    "@hono/otel": "^1.0.1",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.1.5",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@scalar/hono-api-reference": "^0.9.28",
    "bullmq": "^5.52.2",
    "hono": "^4.10.8",
    "hono-rate-limiter": "^0.4.2",
    "ioredis": "^5.6.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@hono/eslint-config": "^2.0.3",
    "@types/node": "^24.10.2",
    "cross-env": "^10.1.0",
    "prettier": "^3.7.4",
    "typescript": "^5.8.3"
  }
}
