{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "format": {},
    "format:check": {},
    "check-types": {
      "dependsOn": ["^check-types"]
    }
  }
}
